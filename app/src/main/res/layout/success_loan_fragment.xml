<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <ImageView
        android:id="@+id/ok_image_success_loan"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/circle_shape_background"
        android:src="@drawable/ic_baseline_done_outline_24"
        app:layout_constraintBottom_toTopOf="@+id/ok_tv_success_loan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_max="450dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintWidth_max="450dp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/ok_tv_success_loan"
        style="@style/titleStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/success_text"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/ok_btn_success_loan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ok_image_success_loan" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/ok_btn_success_loan"
        style="@style/buttonStyleWithBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mm_kay"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ok_tv_success_loan" />

</androidx.constraintlayout.widget.ConstraintLayout>